<div class="span12 metal">
	
	 <div class="row-fluid">
	 
	 	<div class="span7">
	   		<h1><%=t("products.index.page.heading")%></h1>
	   </div> 
	 
	   <div class="span5">
	     <%=render 'shared/flash_messages'%>
	   </div>
	 
	 </div>
     <hr />
		 <%if @products.any?%>
	   		  <%@products.each do |product|%>		
		 		<div class="row-fluid"> 
		 			
		 			<div class="span3">
		 				
		 				<div class="row-fluid">   	
		 					<%=image_tag("generic_product_large.gif",
        						:alt=>t("products.show.page.missing_image"),
        						:title=>t("products.show.page.missing_image"),
        						:class=>"gray_border")%>
        				</div>
        		    
        		    <div class="row-fluid">
        		    	<div class="span4">
        		    		<div class="product_price">
        		    			 <%=number_to_currency(product.price)%>
        		        	</div> 
        		    	</div>
                   </div>
        		      
        		</div>
    
    	        <div class="span9">
    		       
    		       <div class="row-fluid">
    		         <h1>
    		         	<%=link_to (product.name), store_product_path(product)%>
    		         	
    		                
    		         </h1>    
    		          
    		       </div> 	
      			   
      			   <div class="row-fluid">
      			     <div class="product_description">
      			     	<%=sanitize(product.description)%>
      			     </div>
      			     
      			     <div>        		    
        		   			<!--Si noti come sia possibile passare parametri  
        		   				attraverso un helper. Vengono aggiunti come
        		   				query string in questo modo. Ad esempio:
        		   				action="/line_items?product_id=12"
        		   				-->
        		   			<%=button_to(t("store.index.page.cart_button"),
        		   			line_items_path(:product_id=>product.id),
        		   			:class=>"btn btn-primary")%>
                    </div>   
      			     
      			     
      			   </div> 
      			
      			</div>
      			    
      		</div>        
            
            
         
            
            <br/>	
            <hr />
      <%end%> 
    <%end%>
</div>

