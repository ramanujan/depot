<div class="span12">
	
	 <div class="row-fluid">
	 
	   <div class="span10">
	   		<h1 class="page-header"><%=t("index_products_page.title")%></h1>
	   </div> 
	 
	   <div class="span2">
	     <%=render 'shared/flash_messages'%>
	   </div>
	 
	 </div>
	 
	 <%if @products.any?%>
   		  <%@products.each do |product|%>		
	 		<div class="row-fluid"> 
	 			
	 			<div class="span2">
	 				<%=image_tag("generic_product_large.gif",
        			:alt=>"generic_product_image",
        			:title=>t("show_product_page.generic_product_image"),
        			:class=>"gray_border")%>
        		</div>
    
    	        <div class="span10">
    		       
    		       <div class="row-fluid">
    		         <h1>
    		         
    		         	<%=link_to product.name,product_path(product)%>
    		                
    		         </h1>    
    		          
    		       </div> 	
      			   
      			   <div class="row-fluid">
      			     <%=simple_format(product.description)%>
      			   </div> 
      			
      			</div>
      			    
      		</div>        
            <br/>	
             <div class="row-fluid">
             	<div class="btn-group">
            		<%=link_to t("product.edit_product"),edit_product_path(product),:class=>"btn btn-success"%>
            		<%=link_to t("product.show_product"),product_path(product),:class=>"btn btn-success"%>
            		<%=link_to t("product.delete_product"),product_path(product),:class=>"btn btn-danger"%>
    			</div>
            </div>
            <hr />
      <%end%> 
    <%end%>
</div>
