<div class="span12 metal">
	
	 <div class="row-fluid">
	 	
	   <div class="span8">
	   		<h1><%=t("products.index.page.heading")%></h1>
	       
	   </div> 
	    
	   <div class="span4">
	     <%=render 'shared/flash_messages'%>
	   </div>
	  
	 
	 </div>
	  <hr/>
	 <%if @products.any?%>
   		  <%@products.each do |product|%>		
	 	     
	 	     <div class="row-fluid"> 
	 			<div class="span2">
	 				<%=image_tag("generic_product_large.gif",
        				:alt=>t("products.show.page.missing_image"),
        				:title=>t("products.show.page.missing_image"),
        				:class=>"gray_border")%>
    	
        		</div>
    
    	        <div class="span10">
    		       
    		       <div class="row-fluid">
    		         <h1>
    		         
    		         	<%=link_to product.name,product_path(product)%>
    		                
    		         </h1>    
    		          
    		       </div> 	
      			   
      			   <div class="row-fluid">
      			     <%=sanitize(product.description)%>
      			   </div> 
      			
      			</div>
      			    
      		</div>        
            <br/>	
             <div class="row-fluid">
             	<div class="btn-group">
            		<%=link_to t("product.edit_product"),edit_product_path(product),:class=>"btn btn-success"%>
            		<%=link_to t("product.show_product"),product_path(product),:class=>"btn btn-success"%>
            		<%=link_to t("product.delete_product"),product_path(product),
            		:method=>:delete,:confirm=>"Are you sure?",
            		:class=>"btn btn-danger"%>
            		           
            		 
    			</div>
            </div>
            <hr />
      <%end%> 
    <%end%>
</div>
